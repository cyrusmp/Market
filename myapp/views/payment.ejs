<% title = "Merced Market" %>
<% additionalStyles = ['/login/login.css'] %>

<%- contentFor('body') %>
<section class="homepage">
  <div class="payment-container">
    <h1>Payment Info</h1>
    <div id="payment-form">
      <h2>Customer Details</h2>
      <label for="full-name">Full Name</label>
      <input type="text" id="full-name" placeholder="Example: John Doe" required />
      <label for="email">Email</label>
      <input type="text" id="email" placeholder="Example: jdoe@sfsu.edu" required />
      <label for="phone-number">Phone Number</label>
      <input type="text" id="phone-number" placeholder="Example: 4159110000" required />

      <h2>Address Details</h2>
      <label for="street">Full Address</label>
      <input type="text" id="street" placeholder="Example: 1600 Holloway Ave" required />
      <label for="city">City</label>
      <input type="text" id="city" placeholder="Example: San Francisco" required />
      <label for="state">State</label>
      <input type="text" id="state" placeholder="Example: CA" required />
      <label for="zip">ZIP Code</label>
      <input type="text" id="zip" placeholder="Example: 94132" required />

      <h2>Payment Method</h2>
      <label for="cardNumber">Card Number</label>
      <input type="number" id="cardNumber" placeholder="Example: 4111 1111 1111 1111" required />

      <button type="submit">Submit Order</button>
    </div>
  </div>
</section>
